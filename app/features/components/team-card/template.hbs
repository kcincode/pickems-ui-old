<div class="col-xs-12 col-md-6">
    <div class="team">
        {{#if isEditing}}
            <div class="form-group">
            {{input value=team.name class='form-control'}}
            </div>
        {{else}}
        <h4 class="name">{{team.name}}</h4>
        {{/if}}
        <div class="info">
            <h5 class="owner">Owned by {{team.owner.name}}</h5>
            <h6 class="status text-xs-center">
                {{#if team.paid}}
                <div class="paid">Paid</div>
                {{else}}
                <div class="not-paid"><a href="https://www.paypal.com/" target="_new">paypal: {{system.env.paypalEmail}}</a></div>
                {{/if}}
            </h6>
        </div>
        <div class="points row">
            <div class="col-xs-6 text-xs-center">
                <div class="heading">REG</div>
                <div class="number">{{team.reg_points}}pts</div>
                <div class="rank">{{team.reg_ranking}}</div>
            </div>
            <div class="col-xs-6 text-xs-center">
                <div class="heading">PLAYOFF</div>
                <div class="number">{{team.post_points}}pts</div>
                <div class="rank">{{team.post_ranking}}</div>
            </div>
        </div>
        <hr/>
        <div class="actions">
            <div class="row">
                {{log isEditing}}
                {{#if isEditing}}
                    <div class="col-xs-6 text-xs-center">
                        <span class="card-link action text-primary" {{action 'updateTeam'}}>{{fa-icon 'save'}} Save</span>
                    </div>
                    <div class="col-xs-6 text-xs-center">
                        <span class="card-link action" {{action 'cancelEdit'}}>{{fa-icon 'remove'}} Cancel</span>
                    </div>
                {{else}}
                    <div class="col-xs-4 text-xs-center">
                        {{#link-to 'picks' team.slug}}
                            {{fa-icon 'list'}} Picks
                        {{/link-to}}
                    </div>
                    {{#if (eq team.owner.id session.currentUser.id)}}
                    <div class="col-xs-4 text-xs-center">
                        <span class="card-link action" {{action 'toggleEdit'}}>{{fa-icon 'edit'}} Edit</span>
                    </div>
                    <div class="col-xs-4 text-xs-center">
                        <span class="card-link text-danger action" {{action 'removeTeam' team}}>{{fa-icon 'trash'}} Delete</span>
                    </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
