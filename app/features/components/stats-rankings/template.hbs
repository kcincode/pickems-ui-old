<div class="card">
    <div class="card-block text-xs-center">
        <h4 class="card-title">{{category}} Rankings up to week #{{if (gt system.week 17) '17' system.week}}</h4>
        {{#if (gt data.length limit)}}
            <p class="text-muted">Displaying top {{limit}} teams</p>
        {{/if}}
    </div>
    <div class="card-block">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Team</th>
                    <th>Points</th>
                    <th>W/L</th>
                    <th>Playoff</th>
                </tr>
            </thead>
            <tbody>
                {{#each-in data as |idx row|}}
                    <tr>
                        <td>{{inc idx}}</td>
                        <td>{{link-to row.team 'teams.team' row.slug (query-params read_only=true)}}</td>
                        <td>{{row.points}}</td>
                        <td>{{row.wl}}</td>
                        <td>{{row.playoff}}</td>
                    </tr>
                {{/each-in}}
            </tbody>
        </table>
    </div>
</div>
