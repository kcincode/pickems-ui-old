<div class="row">
  <div class="col-md-6">
    <h2>Team Paid Status</h2>
  </div>
  <div class="col-md-6 text-xs-right">
    <div class="btn-group">
      {{link-to 'Show Unpaid' 'admin.status' 'unpaid' class="btn btn-secondary"}}
      {{link-to 'Show All' 'admin.status' 'all' class="btn btn-secondary"}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <hr/>

    <div class="list-group">
      {{#each displayedTeams as |team|}}
        <div class="list-group-item">
          <div class="float-xs-right">
            {{#unless team.paid}}
              <button class="btn btn-success btn-md" {{action (route-action 'togglePaid' team)}}>{{fa-icon 'check' fixedWidth=true}} Mark Paid</button>
            {{/unless}}
            {{#if (and (eq status 'all') team.paid)}}
              <button class="btn btn-danger" {{action (route-action 'togglePaid' team)}}>{{fa-icon 'remove' fixedWidth=true}}  Mark Un-paid</button>
            {{/if}}
          </div>
          <h4>{{team.name}}</h4>
          <small>{{team.user.name}} (<a href="mailto:{{team.user.email}}">{{team.user.email}}</a>)</small>
        </div>
      {{else}}
        {{#if (eq status 'unpaid')}}
          <h4 class="text-muted text-xs-center">All teams are paid</h4>
        {{else}}
          <h4 class="text-muted">There are no teams in the system.</h4>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

{{outlet}}
